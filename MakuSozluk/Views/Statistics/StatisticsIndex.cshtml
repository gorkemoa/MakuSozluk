@{
    ViewData["Title"] = "İstatistik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<center><h2>İstatistikler</h2></center>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistikler</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <div class="row">

            <!-- Toplam Kategori Sayısı -->
            <div class="col-md-4">
                <div class="info-box bg-gradient-info text-center">
                    <div class="info-box-content">
                        <span class="info-box-text">Toplam Kategori Sayısı</span>
                        <span style="font-size:160%" class="info-box-value">@ViewBag.ToplamKategoriSayisi</span>
                    </div>
                </div>
            </div>

            <!-- Yazılım Kategorisine Ait Başlık Sayısı -->
            <div class="col-md-4">
                <div class="info-box bg-gradient-info text-center">
                    <div class="info-box-content">
                        <span class="info-box-text">"Yazılım" Kategorisine Ait Başlık Sayısı</span>
                        <span style="font-size:160%" class="info-box-value">@ViewBag.YazilimKategoriBaslikSayisi</span>
                    </div>
                </div>
            </div>

            <!-- Yazar Adında 'a' Harfi Geçen Yazar Sayısı -->
            <div class="col-md-4">
                <div class="info-box bg-gradient-info text-center">
                    <div class="info-box-content">
                        <span class="info-box-text">Yazar Adında 'a' Harfi Geçen Yazar Sayısı</span>
                        <span style="font-size:160%" class="info-box-value">@ViewBag.AHarfiGecenYazarSayisi</span>
                    </div>
                </div>
            </div>

            <!-- En Fazla Başlığa Sahip Kategori Adı -->
            <div class="col-md-4">
                <div class="info-box bg-gradient-info text-center">
                    <div class="info-box-content">
                        <span class="info-box-text">En Fazla Başlığa Sahip Kategori Adı</span>
                        <span style="font-size:160%" class="info-box-value">@ViewBag.EnFazlaBasligaSahipKategori</span>
                    </div>
                </div>
            </div>

            <!-- Durumu True Olan Kategoriler -->
            <div class="col-md-4">
                <div class="info-box bg-gradient-info text-center">
                    <div class="info-box-content">
                        <span class="info-box-text">Durumu True Olan Kategoriler</span>
                        <span style="font-size:160%" class="info-box-value">@ViewBag.AktifKategoriSayisi</span>
                    </div>
                </div>
            </div>

            <!-- Durumu False Olan Kategoriler -->
            <div class="col-md-4">
                <div class="info-box bg-gradient-info text-center">
                    <div class="info-box-content">
                        <span class="info-box-text">Durumu False Olan Kategoriler</span>
                        <span style="font-size:160%" class="info-box-value">@ViewBag.PasifKategoriSayisi</span>
                    </div>
                </div>
            </div>

            <!-- Durum Farkı -->
            <div class="col-md-4">
                <div class="info-box bg-gradient-info text-center">
                    <div class="info-box-content">
                        <span class="info-box-text">Durum Farkı</span>
                        <span style="font-size:160%" class="info-box-value">@ViewBag.DurumFarki</span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
